<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.allwidgets.Widgets2">

    <ProgressBar
        android:id="@+id/circularProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/horizontalProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progressTintMode="src_over"
        android:layout_below="@+id/seekbarStatusText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/seekbarStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SeekBar status: "
        android:textAlignment="center" />

    <TextView
        android:id="@+id/discreteSeekbarStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Discrete SeekBar status: "
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/discreteSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discreteSeekbarStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:max="10"
        android:progress="3"
        android:progressTint="@android:color/holo_red_dark"
        android:progressTintMode="src_over"
        android:thumb="@drawable/mark_red" />

    <TextView
        android:id="@+id/rateBarText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/discreteSeekBar"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/ratingBar"
        android:gravity="center_vertical"
        android:text="Rate Me ( ͡° ͜ʖ ͡°)  "
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rateBarText"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rateBarText" />

    <Switch
        android:id="@+id/switchLaLaLa"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar"
        android:checked="true"
        android:showText="true"
        android:switchMinWidth="100dp"
        android:text="Switch / Toggle : "
        android:textColor="@android:color/black"
        android:textOff="0"
        android:textOn="1"
        android:textSize="18sp"
        android:thumbTint="@color/colorAccent" />

</RelativeLayout>
